<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.itstack</groupId>
    <artifactId>itstack-demo-bytecode</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <modules>
        <module>itstack-demo-bytecode-1-01</module>
        <module>itstack-demo-bytecode-1-02</module>
        <module>itstack-demo-bytecode-1-03</module>
        <module>itstack-demo-bytecode-1-04</module>
        <module>itstack-demo-bytecode-1-05</module>
        <module>itstack-demo-bytecode-2-01</module>
        <module>itstack-demo-bytecode-2-02</module>
        <module>itstack-demo-bytecode-2-03</module>
        <module>itstack-demo-bytecode-3-01</module>
        <module>itstack-demo-bytecode-3-02</module>
        <module>itstack-demo-bytecode-3-03</module>
        <module>itstack-demo-bytecode-3-04</module>
        <module>itstack-demo-bytecode-3-05</module>
        <module>itstack-demo-bytecode-3-06</module>
        <module>itstack-demo-bytecode-4-01</module>
        <module>itstack-demo-bytecode-4-02</module>
        <module>itstack-demo-bytecode-4-03</module>
        <module>itstack-demo-bytecode-4-04</module>
        <module>itstack-demo-bytecode-4-05</module>
        <module>itstack-demo-bytecode-4-06</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.13.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.alibaba</groupId>
            <artifactId>fastjson</artifactId>
            <version>1.2.83</version>
        </dependency>
        <dependency>
            <groupId>javassist</groupId>
            <artifactId>javassist</artifactId>
            <version>3.12.1.GA</version>
            <type>jar</type>
        </dependency>
        <!-- Byte-buddy -->
        <dependency>
            <groupId>net.bytebuddy</groupId>
            <artifactId>byte-buddy</artifactId>
            <version>1.10.9</version>
        </dependency>
        <dependency>
            <groupId>net.bytebuddy</groupId>
            <artifactId>byte-buddy-agent</artifactId>
            <version>1.10.9</version>
        </dependency>
        <!--ASM-->
        <dependency>
            <groupId>org.ow2.asm</groupId>
            <artifactId>asm-commons</artifactId>
            <version>6.2.1</version>
            <exclusions>
                <exclusion>
                    <groupId>org.ow2.asm</groupId>
                    <artifactId>asm-analysis</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.ow2.asm</groupId>
                    <artifactId>asm-tree</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>